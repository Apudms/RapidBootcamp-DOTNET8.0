@{
}
@model List<RapidBootcamp.WebApplication.Models.Product>


<html>
<head>
    <title>Home Page</title>
</head>
<body>
    <h1>List Of Products</h1>
    <br />

    <form action="/Products" method="post">
        '
        <label>Search Product By Name</label>
        <input type="type" name="ProductName" placeholder="Search..." />
        <button type="submit">Search</button>
    </form>
    <form action="/Products" method="post">
        '
        <label>Search Product By Category</label>
        <input type="type" name="CategoryName" placeholder="Search..." />
        <button type="submit">Search</button>
    </form>
    <a href="/Products/Create">Create New Product</a>
    <table>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Product Name</th>
            <th>Stock</th>
            <th>Price</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Category.CategoryName</td>
                <td>@product.ProductName</td>
                <td>@product.Stock</td>
                <td>@product.Price</td>
                <td><a href="/Customers/Details/@product.ProductId">Detail</a></td>
                <td><a href="/Customers/Edit/@product.ProductId">Edit</a></td>
                <td><a href="/Customers/Delete/@product.ProductId">Delete</a></td>
            </tr>
        }
    </table>
</body>
</html>