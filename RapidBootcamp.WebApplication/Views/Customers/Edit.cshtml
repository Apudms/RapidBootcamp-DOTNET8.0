@{
}
@model RapidBootcamp.WebApplication.Models.Customer

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Edit Customer</title>
</head>
<body>
    <h2>Edit Customer</h2>
    <form action="/Customers/Edit" method="post">
        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
        <div>
            <label for="CustomerName">Customer Name:</label>
            <input type="text" name="CustomerName" value="@Model.CustomerName" />
        </div>
        <div>
            <label for="CustomerAddress">Customer Address:</label>
            <input type="text" name="CustomerAddress" value="@Model.CustomerAddress" />
        </div>
        <div>
            <label for="CustomerCity">Customer City:</label>
            <input type="text" name="CustomerCity" value="@Model.CustomerCity" />
        </div>
        <div>
            <label for="CustomerEmail">Customer Email:</label>
            <input type="text" name="CustomerEmail" value="@Model.CustomerEmail" />
        </div>
        <div>
            <label for="CustomerPhoneNumber">Customer Phone:</label>
            <input type="text" name="CustomerPhoneNumber" value="@Model.CustomerPhoneNumber" />
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</body>
</html>